@model testimviec.Controllers.CandidateDto
@{
    ViewData["Title"] = "Kết quả phân tích CV";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-0 fw-bold text-primary">Kết quả phân tích CV</h2>
                <p class="text-muted mb-0">Kiểm tra và chỉnh sửa thông tin trước khi lưu vào hệ thống.</p>
            </div>
        </div>

        <form asp-action="Confirm" method="post">
            <div class="card mb-4 shadow border-0 rounded-3">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 text-secondary"><i class="bi bi-person-lines-fill me-2"></i>Thông tin ứng viên</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Họ và Tên</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Kỹ năng (Cách nhau bởi dấu phẩy)</label>
                            <input type="text"
                                   name="skillsString"
                                   class="form-control"
                                   value="@(Model.Skills != null ? string.Join(", ", Model.Skills) : "")"
                                   placeholder="Ví dụ: C#, SQL, Teamwork" />
                            <small class="form-text text-muted">Các kỹ năng sẽ được lưu thành bảng Skill/CandidateSkill trong CSDL.</small>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Số năm kinh nghiệm</label>
                            <input asp-for="ExperienceYears" type="number" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow border-0 rounded-3">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 text-secondary"><i class="bi bi-bar-chart-steps me-2"></i>Đánh giá năng lực</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-success"><i class="bi bi-arrow-up-circle me-1"></i>Điểm mạnh</label>
                            <textarea asp-for="Strengths" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-danger"><i class="bi bi-arrow-down-circle me-1"></i>Điểm yếu / Cần cải thiện</label>
                            <textarea asp-for="Weaknesses" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold text-primary"><i class="bi bi-card-text me-1"></i>Tóm tắt ứng viên</label>
                            <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden" name="filePath" value="@ViewBag.FilePath" />
            <input type="hidden" name="rawJsonResult" value="@ViewBag.RawJsonResult" />

            <div class="d-flex gap-2 justify-content-end mb-5">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Hủy bỏ</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">
                    <i class="bi bi-check-lg me-2"></i>Xác nhận & Lưu
                </button>
            </div>
        </form>
    </div>
</div>