@model IEnumerable<testimviec.Models.Candidate>

@{
    ViewData["Title"] = "Quản lý Hồ sơ Ứng viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .avatar-circle {
        width: 45px;
        height: 45px;
        background-color: #e9ecef;
        color: #495057;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        text-transform: uppercase;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.9rem;
        color: #6c757d;
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Hồ sơ ứng viên</h2>
            <p class="text-muted mb-0">Quản lý và phân tích CV tự động bằng AI</p>
        </div>
        <div>
            <a asp-action="Upload" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-cloud-upload me-2"></i>Tải CV mới
            </a>
        </div>
    </div>

    <div class="card border-0 shadow rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-secondary"><i class="bi bi-list-ul me-2"></i>Danh sách hồ sơ</h5>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control bg-light border-start-0" placeholder="Tìm kiếm...">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light text-secondary text-uppercase small fw-bold">
                    <tr>
                        <th class="ps-4">Ứng viên</th>
                        <th class="text-center" style="width: 130px;">Kinh nghiệm</th>
                        <th>Kỹ năng chuyên môn</th>
                        <th>Đánh giá AI (Tóm tắt)</th>
                        <th>Ngày tạo</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                Chưa có dữ liệu. Hãy tải lên CV đầu tiên!
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            var initial = !string.IsNullOrEmpty(item.FullName) ? item.FullName.Substring(0, 1) : "?";

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 shadow-sm">@initial</div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.FullName</div>
                                            <div class="small text-muted"><i class="bi bi-envelope me-1"></i>@item.Email</div>
                                            <div class="small text-muted"><i class="bi bi-telephone me-1"></i>@item.Phone</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-center">
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 rounded-pill px-3">
                                        @item.ExperienceYears năm
                                    </span>
                                </td>

                                <td style="max-width: 250px;">
                                    <div class="d-flex flex-wrap gap-1">
                                        @if (!string.IsNullOrWhiteSpace(item.Skills))
                                        {
                                            var skills = item.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
                                            var displayLimit = 4; // Hiển thị nhiều hơn chút vì có cột riêng
                                            foreach (var skill in skills.Take(displayLimit))
                                            {
                                                <span class="badge bg-secondary fw-normal">@skill</span>
                                            }
                                            if (skills.Length > displayLimit)
                                            {
                                                <span class="badge bg-light text-secondary border"
                                                      data-bs-toggle="tooltip"
                                                      title="@string.Join(", ", skills.Skip(displayLimit))"
                                                      style="cursor: help;">
                                                    +@(skills.Length - displayLimit)
                                                </span>
                                            }
                                        }
                                    </div>
                                </td>

                                <td style="max-width: 300px;">
                                    <div class="mb-1">
                                        <i class="bi bi-chat-quote-fill text-info me-1"></i>
                                        <span class="fw-semibold text-dark" style="font-size: 0.9rem;">Tóm tắt:</span>
                                    </div>
                                    <div class="text-truncate-2" title="@item.Summary">
                                        @item.Summary
                                    </div>
                                    <div class="mt-2 text-muted small">
                                        @if (!string.IsNullOrEmpty(item.Strengths))
                                        {
                                            <span class="me-2 text-success" data-bs-toggle="tooltip" title="Điểm mạnh: @item.Strengths"><i class="bi bi-arrow-up-circle-fill"></i> Mạnh</span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Weaknesses))
                                        {
                                            <span class="text-danger" data-bs-toggle="tooltip" title="Điểm yếu: @item.Weaknesses"><i class="bi bi-arrow-down-circle-fill"></i> Yếu</span>
                                        }
                                    </div>
                                </td>

                                <td>
                                    <span class="text-muted small">
                                        @item.AnalyzedAt.ToString("dd/MM/yyyy")
                                    </span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Xóa hồ sơ này?');"
                                                    title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white py-3 border-top">
            <div class="small text-muted">
                Hiển thị <strong>@Model.Count()</strong> bản ghi
            </div>
        </div>
    </div>
</div>

<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>