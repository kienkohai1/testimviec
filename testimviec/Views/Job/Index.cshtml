@model IEnumerable<testimviec.Models.Job>

@{
    ViewData["Title"] = "Quản lý việc làm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách việc làm</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Tên công việc</th>
                <th>Mức lương</th>
                <th>Kinh nghiệm (năm)</th>
                <th>Kỹ năng yêu cầu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Title</td>
                    <td>@item.SalaryRange</td>
                    <td class="text-center">@item.MinExperienceYears</td>
                    <td>
                        @foreach (var js in item.JobSkills)
                        {
                            <span class="badge bg-info text-dark me-1">@js.Skill?.Name</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>